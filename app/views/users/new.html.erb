<h1>Sign Up</h1>

<hr>
<h2>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    
			<h2>Form is invalid</h2>
      <ul>
				<% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
				<% end %>
      </ul>
		</div>
	<% end %>

	
		<%= f.label :name %>
    <%= f.text_field :name %> 
	

	
		<%= f.label :email %>
    <%= f.text_field :email %> 
 

	
		<%= f.label :password %>
    <%= f.password_field :password %> 
 

	
		<%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %> 
  

  <hr>
  <br>

	<div class="actions"><%= f.submit %></div>

<% end %>

